{
  "name": "post-winodw",
  "private": true,
  "main": "main.js",
  "version": "0.0.1",
  "description": "一个请求模拟器",
  "author": {
    "email": "ruansuccess@163.com",
    "name": "raunsuccesss"
  },
  "repository": "https://github.com/promiseHusky/vue-electron.git",
  "scripts": {
    "dev": "vite",
    "builds": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "eleMain": "webpack",
    "start": "concurrently \"electron .\" \"vite\"",
    "dist": "electron-builder --dir",
    "build": "electron-builder",
    "predist": "npm run eleMain",
    "prebuild": "npm run eleMain",
    "preeleMain": "npm run builds",
    "prebuilds": "webpack"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.0.6",
    "axios": "^0.27.2",
    "element-plus": "^2.2.8",
    "js-md5": "^0.7.3",
    "vue": "^3.2.25",
    "vue-json-viewer": "^3.0.4",
    "vue-router": "^4.0.14"
  },
  "homepage": "./",
  "build": {
    "appId": "post-window-appid-2022",
    "productName": "post-window",
    "copyright": "Copyright © 2022 ${author}",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "./build/"
    },
    "extraMetadata": {
      "main": "./build/main.js"
    },
    "extends": null,
    "publish": [
      "github"
    ],
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "./build/logo.ico",
      "artifactName": "${productName}-Web-Setup-${version}.${ext}",
      "publisherName": "hsq"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false,
      "installerIcon": "./build/logo.ico"
    }
  },
  "devDependencies": {
    "@electron/remote": "^2.0.7",
    "@vitejs/plugin-vue": "^2.2.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^17.1.2",
    "electron-builder": "^22.14.13",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.6.5",
    "vite": "^2.8.0",
    "wait-on": "^6.0.1",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.10.0"
  }
}
